    console.log(content);
    $('#qrcode-data').html(content);
    if (content == 'blue') {

    } else if (content == 'green') {

    } else if (content == 'red') {

    } else {

    }
  });
  Instascan.Camera.getCameras().then(function (cameras) {
    if (cameras.length > 0) {
      scanner.start(cameras[1]);
    } else {
      $('#qrcode-data').html('No cameras found.');
    }
  }).catch(function (e) {
    //console.error(e);
    $('#qrcode-data').html(e.message);
  });
</script>
